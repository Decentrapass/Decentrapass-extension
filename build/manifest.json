{
  "short_name": "NoPass",
  "name": "NoPass Password Manager",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "An open-source, free and secure password manager",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./main.js"],
      "css": ["./main.css"]
    }
  ],
  "browser_action": {
    "default_popup": "./popup.html",
    "default_icon": "./img/transparent-logo.png"
  },
  "web_accessible_resources": ["img/transparent-logo.png"]
}
